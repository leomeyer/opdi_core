<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:orientation="vertical" android:background="@drawable/background" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content">
        <TextView style="@style/StandardFont" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/textView" android:paddingTop="10dip" android:paddingBottom="20dip" android:text="@string/text_enter_analog_value"></TextView>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout3" android:paddingTop="20dip" android:paddingBottom="20dip">
                <TextView style="@style/StandardFont" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView2" android:text="@string/text_value" android:paddingRight="10dip"></TextView>

                <EditText style="@style/StandardEdit"
                    android:id="@+id/edittext_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:inputType="text|number" >
</EditText>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout5" android:layout_gravity="center" android:gravity="center_horizontal">

        <Button
            android:id="@+id/button_cancel"
            style="@style/StandardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />

        <Button style="@style/StandardButton"
            android:id="@+id/button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok" >
</Button>
    </LinearLayout>
</LinearLayout>
